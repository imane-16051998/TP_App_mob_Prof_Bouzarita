<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Chef_D_photoUrl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:src="@drawable/person"
        android:layout_marginRight="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Chef_D_FullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. FirstName and Last Name"
            android:textColor="#039BE5"
            android:textSize="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/Chef_D_Department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department : department"/>

        <TextView
            android:id="@+id/Chef_D_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: email"
            android:layout_marginBottom="4dp"/>



    </LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>